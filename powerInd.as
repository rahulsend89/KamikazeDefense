package{	import flash.display.*;	import flash.events.*;	import flash.utils.getDefinitionByName;	class powerInd extends MovieClip{		var mainClass:MovieClip;		var powerAr:Array = ["Shield","Machine","Multi","Lazer","Fire"];		public function powerInd (){			mainClass = (this.root as MovieClip);			//trace(+" :mainClass ");			this.gotoAndStop(this.name);			this.addEventListener(Event.ENTER_FRAME,doit);			this.addEventListener(Event.REMOVED_FROM_STAGE,removed);		}		private function removed(e:Event):void {			e.target.removeEventListener(Event.ENTER_FRAME , doit);		}		private function doit(e:Event):void{			var gameClass:MovieClip = mainClass.getChildByName("main_mc") as MovieClip;			if (gameClass!=null) {				var str:String = "power_"+this.name.toString();				var Bool:Boolean = gameClass[str];				//trace(Bool+" : Bool : "+this.name+" : "+str+" : "+gameClass[str]);				if (Bool) {					this.visible = true;					}else{					this.visible = false;				}			}else{				e.target.removeEventListener(Event.ENTER_FRAME , doit);			}		}	}}